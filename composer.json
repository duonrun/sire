{
	"name": "duon/sire",
	"description": "A PHP validation library",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "ebene fÃ¼nf GmbH",
			"email": "duon@ebenefuenf.de",
			"role": "Developer"
		}
	],
	"homepage": "https://duon.dev/sire",
	"keywords": [
		"duon",
		"validation"
	],
	"autoload": {
		"psr-4": {
			"Duon\\Sire\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Sire\\Tests\\": "tests"
		}
	},
	"require": {
		"php": ">=8.1",
		"symfony/html-sanitizer": "^7.1",
		"duon/dev": "^1.1"
	},
	"require-dev": {
		"pestphp/pest": "^1 || ^3",
		"vimeo/psalm": "^6.10",
		"dealerdirect/phpcodesniffer-composer-installer": "^1"
	},
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
