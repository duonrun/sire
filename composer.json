{
	"name": "duon/sire",
	"description": "A PHP validation library",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ernst",
			"email": "ernst@duon.run"
		}
	],
	"homepage": "https://duon.run/sire",
	"keywords": [
		"duon",
		"validation"
	],
	"autoload": {
		"psr-4": {
			"Duon\\Sire\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Sire\\Tests\\": "tests"
		}
	},
	"require": {
		"php": "^8.5",
		"symfony/html-sanitizer": "^7.1"
	},
	"require-dev": {
		"duon/dev": "^2.5"
	},
	"scripts": {
		"test": "./vendor/bin/phpunit --testdox --no-coverage --colors=always",
		"types": "./vendor/bin/psalm --no-cache",
		"mdlint": "markdownlint-cli2 README.md CHANGELOG.md LICENSE.md docs/",
		"coverage": [
			"./vendor/bin/phpunit --testdox --path-coverage --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer coverage",
			"composer types",
			"composer mdlint"
		]
	}
}
